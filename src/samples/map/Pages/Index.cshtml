@page "/"

@using Kakao.Net.util
@inject Microsoft.JSInterop.IJSRuntime JSRuntime

<div id="map" style="width:100%;height:400px;"></div>

<div>
    <button class="btn btn-primary" onclick="@onClickDrawMap">DrawMap</button>
    <button class="btn btn-primary" onclick="@onClickDrawTraffic">DrawTraffic</button>
</div>

@functions
{
    private async void onClickDrawMap()
    {
        await (new KakaoStrapInterop(JSRuntime)).DrawMap((float)33.450701, (float)126.570667);
    }

    private async void onClickDrawTraffic()
    {
        await (new KakaoStrapInterop(JSRuntime)).DrawTraffic((float)37.566826, (float)126.9786567);
    }
}
